{
  "title": "Mega FN",
  "rules": [
    {
      "description": "FN + ijkl == Arrow Keys",
      "manipulators": [
        {
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "repeat": true
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "repeat": true
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "repeat": true
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "repeat": true
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
        "description": "FN + uiop == '[]\\",
        "manipulators": [
          {
            "from": {
              "key_code": "u",
              "modifiers": {
                "mandatory": [
                  "fn"
                ],
                "optional": [
                  "any"
                ]
              }
            },
            "to": [
              {
                "key_code": "quote",
                "repeat": true
              }
            ],
            "type": "basic"
          },
          {
            "from": {
              "key_code": "i",
              "modifiers": {
                "mandatory": [
                  "fn"
                ],
                "optional": [
                  "any"
                ]
              }
            },
            "to": [
              {
                "key_code": "open_bracket",
                "repeat": true
              }
            ],
            "type": "basic"
          },
          {
            "from": {
              "key_code": "o",
              "modifiers": {
                "mandatory": [
                  "fn"
                ],
                "optional": [
                  "any"
                ]
              }
            },
            "to": [
              {
                "key_code": "close_bracket",
                "repeat": true
              }
            ],
            "type": "basic"
          },
          {
            "from": {
              "key_code": "p",
              "modifiers": {
                "mandatory": [
                  "fn"
                ],
                "optional": [
                  "any"
                ]
              }
            },
            "to": [
              {
                "key_code": "backslash",
                "repeat": true
              }
            ],
            "type": "basic"
          }
        ]
      }
  ]
}
